<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.SplashScreen2">

    <ImageView
        android:id="@+id/splash2_image"
        android:layout_width="270dp"
        android:layout_height="255dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="0dp"
        android:importantForAccessibility="no"
        android:src="@drawable/splash_2" />

    <TextView
        android:id="@+id/splash2_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:padding="49dp"
        android:text="@string/splash2_text"
        android:textAlignment="center"
        android:textColor="@color/black_100"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/splash2_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="49dp"
        android:layout_marginEnd="49dp"
        android:fontFamily="@font/sf_pro_rounded_regular"
        android:text="@string/splash2_button_text"
        android:textAllCaps="false"
        android:textSize="16sp" />

</LinearLayout>